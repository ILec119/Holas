<script>
let noCount = 0;
let yesSize = 22;
let musicPlayed = false;

const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");
const buttons = document.getElementById("buttons");
const title = document.getElementById("title");
const music = document.getElementById("music");

const stickers = ["ğŸ®","ğŸ’–","ğŸŒ¸","ğŸ§¸","âœ¨","ğŸ°","ğŸ“","ğŸ€","ğŸ’•"];

document.body.addEventListener("click", () => {
    if (!musicPlayed) {
        music.play();
        musicPlayed = true;
    }
});

// Stickers flotando
setInterval(() => {
    const sticker = document.createElement("div");
    sticker.className = "sticker";
    sticker.textContent = stickers[Math.floor(Math.random() * stickers.length)];
    sticker.style.left = Math.random() * 100 + "vw";
    sticker.style.animationDuration = (Math.random() * 3 + 5) + "s";
    document.body.appendChild(sticker);
    setTimeout(() => sticker.remove(), 7000);
}, 350);

// NO huye
noBtn.addEventListener("mouseover", () => {
    noBtn.style.transform =
      `translate(${Math.random()*180-90}px, ${Math.random()*180-90}px)`;
});

// Click NO
noBtn.addEventListener("click", () => {
    noCount++;
    yesSize += 14;
    yesBtn.style.fontSize = yesSize + "px";

    if (noCount === 3) {
        buttons.insertBefore(noBtn, yesBtn);
    }

    if (noCount >= 4) {
        title.innerHTML = "Mai-Chan ğŸ¥¹ğŸ®<br>Shi? Jugamos? ğŸŒ¸";
        noBtn.textContent = "Como que no ğŸ˜­ğŸ€";
    }
});

// Click SÃ
yesBtn.addEventListener("click", () => {
    title.innerHTML = "Mai-Chan ğŸ¥°ğŸ’–<br>Vamos a jugar ğŸ®âœ¨";
    buttons.innerHTML = "<h2>ğŸ®ğŸ’ Game time ğŸ’ğŸ®</h2>";
});
</script>

